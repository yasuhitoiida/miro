<% content_for :title, "New short post" %>

<h1>New short post</h1>

<%= form_with(model: @short_post) do |form| %>
  <% if @short_post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@short_post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @short_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.collection_select :user_id, @users, :id, :name, include_blank: '------' %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Back to posts", posts_path %>
</div>
